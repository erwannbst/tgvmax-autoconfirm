# SNCF Credentials
SNCF_EMAIL=your.email@gmail.com
SNCF_PASSWORD=your_sncf_password

# Google Apps Script Webhook (for 2FA)
# Deploy google-apps-script/Code.gs and get the webhook URL
# See README.md for setup instructions
WEBHOOK_URL=https://script.google.com/macros/s/YOUR_SCRIPT_ID/exec
WEBHOOK_SECRET=your_secret_key_here

# Telegram Bot Configuration
# Create a bot via @BotFather and get your chat/user ID via @userinfobot
TELEGRAM_BOT_TOKEN=123456789:ABCdefGHIjklMNOpqrsTUVwxyz
TELEGRAM_CHAT_ID=your_chat_id
TELEGRAM_USER_ID=your_user_id

# Scheduler Settings
# The bot runs continuously and executes daily at the specified time
SCHEDULE_ENABLED=true
SCHEDULE_TIME=08:00

# Optional Settings
HEADLESS=true
SCREENSHOT_ON_ERROR=true
